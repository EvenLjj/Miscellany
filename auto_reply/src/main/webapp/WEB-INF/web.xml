<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
          http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
     <welcome-file-list>
         <welcome-file>index.jsp</welcome-file>
     </welcome-file-list>

    <servlet>
        <servlet-name>ListReplyServlet</servlet-name>
        <servlet-class>com.evenliu.reply.servlet.ListReplyServlet</servlet-class>
    </servlet>
    
   <servlet-mapping>
       <servlet-name>ListReplyServlet</servlet-name>
       <url-pattern>/list.action</url-pattern>
   </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMessageByIdServlet</servlet-name>
        <servlet-class>com.evenliu.reply.servlet.DeleteMessageByIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteMessageByIdServlet</servlet-name>
        <url-pattern>/deleteById.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMessagesServlet</servlet-name>
        <servlet-class>com.evenliu.reply.servlet.DeleteMessagesServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DeleteMessagesServlet</servlet-name>
        <url-pattern>/deleteMessages.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitTalkServlet</servlet-name>
        <servlet-class>com.evenliu.reply.servlet.InitTalkServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InitTalkServlet</servlet-name>
        <url-pattern>/initTalk.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AutoReplyServlet</servlet-name>
        <servlet-class>com.evenliu.reply.servlet.AutoReplyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutoReplyServlet</servlet-name>
        <url-pattern>/autoReply.action</url-pattern>
    </servlet-mapping>
</web-app>